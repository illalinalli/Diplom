@using HomelessAnimalsDiplom.Views.Shared.Components;
@using HomelessAnimalsDiplom.Controllers;
@model HomelessAnimalsDiplom.Views.Home.SignUpModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="m-1 text-danger" asp-validation-summary="All"></div>
<div class="row justify-content-center bordered card-login-form pt-4">
    <div class="row mb-4">
        <div class="col main-page-recom-title" style="text-align: center;">Регистрация</div>
    </div>
    <div class="col-12">
        <form method="post">
            <input type="hidden" name="returnUrl" />
            <div class="form-group mb-3">
                <label class="label-login">Введите ФИО</label>
                <input class="form-control input-form-login" asp-for="@Model.Name" />
            </div>
            <div class="form-group mb-3">
                <label class="label-login">Введите логин</label>
                <input class="form-control input-form-login" asp-for="@Model.Login" />
            </div>
            <div class="form-group">
                <label class="label-login">Введите пароль</label>
                <input class="form-control input-form-login" asp-for="@Model.Password" type="password" class="form-control" />
            </div>

            <div class="form-group mt-3">
                <button class="btn btn-primary btn-login"
                        type="submit">
                    Зарегистрироваться
                </button>
            </div>

           

        </form>
    </div>
</div>

