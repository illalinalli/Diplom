@using MonkeyShop.Views.Shared.Components;
@using MonkeyShop.Controllers;
@model MonkeyShop.Views.Home.SignUpModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="m-1 text-danger" asp-validation-summary="All"></div>

<div class="container">
    <div class="row">
        <div class="col-6">Регистрация</div>
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" name="returnUrl" />
                <div class="form-group mb-3">
                    <label>Введите ФИО</label>
                    <input class="form-control" asp-for="@Model.Name" />
                </div>
                <div class="form-group">
                    <label>Введите логин</label>
                    <input asp-for="@Model.Login" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Введите пароль</label>
                    <input asp-for="@Model.Password" type="text" class="form-control" />
                </div>
                <div class="form-group mt-3">
                    <button class="btn btn-primary"
                            type="submit">
                        Зарегистрироваться
                    </button>
                </div>

            </form>
        </div>
    </div>
    <img src="https://drive.google.com/file/d/1lgfe1O1IGhNXMKKO6HaafYe1sbftd_WD/view?usp=drive_link">
</div>
</div>
