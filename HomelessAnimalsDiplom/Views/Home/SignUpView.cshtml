@using HomelessAnimalsDiplom.Views.Shared.Components;
@using HomelessAnimalsDiplom.Controllers;
@model HomelessAnimalsDiplom.Views.Home.LoginModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="m-1 text-danger" asp-validation-summary="All"></div>

<div class="container">
    <div class="row">
        <div class="col-6">Регистрация</div>
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" name="returnUrl" />
                <div class="form-group mb-3">
                    <label>Введите ФИО:</label>
                    <input class="form-control" asp-for="@Model.Login" />
                </div>

                <div class="form-group">
                    <label>Пароль</label>
                    <input asp-for="@Model.Password" type="password" class="form-control" />
                </div>
                <div class="form-group mt-3">
                    <button class="btn btn-primary"
                            type="submit">
                        Зарегистрироваться
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
